<section class="flex-div">
    <% @teams.each do |t| %>
        <section class="teams-index-cards">
            <label>Team Name:</label><%= link_to t.name, team_path(t) %><br/><br/>
            <label>Team Wins:</label><%= t.total_wins %><br/><br/>
            <label>Team Losses:</label><%= t.total_losses %><br/><br/>
            <label>Team Rank:</label><%= t.rank %><br/><br/>
            <label>Create new car:</label><%= link_to "New Car", new_team_car_path(t)%>
        </section>
    <% end %>
</section>
